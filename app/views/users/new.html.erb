<h1>Sign Up</h1>

<%= form_with(model: @user, local: true) do |f| %>
<div class="mb-3">
  <%= f.label :email %><br/>
  <%= f.email_field :email, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :password %><br/>
  <%= f.password_field :password, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.submit "Sign Up", class: "btn btn-primary" %>
</div>
<% end %>