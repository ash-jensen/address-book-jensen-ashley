<h1>People</h1>

<p>
  <button class="btn btn-primary" type="button" name="create-new-person" data-bs-toggle="collapse" data-bs-target="#collapseExample">
    Create New Person
  </button>
</p>

<div class="collapse mb-4" id="collapseExample">
  <div class="card card-body">
     <%= render "new", person: @person %>
  </div>
</div>

<% @people.each do |person| %>
  <%= render "person", person: person %>
<% end %>