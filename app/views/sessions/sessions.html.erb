<%= form_with(scope: :session, url: login_path) do |f| %>
<div class="mb-3">
  <%= f.label :email %><br/>
  <%= f.email_field :email, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :password %><br/>
  <%= f.password_field :password, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.submit "Log in", class: "btn btn-primary" %>
</div>
<% end %>